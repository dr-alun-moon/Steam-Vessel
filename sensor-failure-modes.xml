<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>broadcast chan poll;
broadcast chan reply;
</declaration>
	<template>
		<name x="5" y="5">Sensor</name>
		<declaration>clock t;</declaration>
		<location id="id0" x="272" y="-68">
			<name x="262" y="-102">Sensing</name>
			<label kind="invariant" x="289" y="-85">t&lt;=2</label>
		</location>
		<location id="id1" x="25" y="-68">
			<name x="15" y="-102">Idle</name>
		</location>
		<branchpoint id="id2" x="144" y="-68">
		</branchpoint>
		<init ref="id1"/>
		<transition>
			<source ref="id2"/>
			<target ref="id1"/>
			<label kind="probability" x="43" y="-144">2</label>
			<nail x="144" y="-144"/>
			<nail x="25" y="-144"/>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id0"/>
			<label kind="assignment" x="162" y="-85">t=0</label>
			<label kind="probability" x="162" y="-68">3</label>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="43" y="-85">poll?</label>
			<label kind="assignment" x="43" y="-68">t=0</label>
		</transition>
		<transition>
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="43" y="42">reply!</label>
			<nail x="272" y="59"/>
			<nail x="25" y="59"/>
		</transition>
	</template>
	<template>
		<name>Controller</name>
		<declaration>clock t;
int st;</declaration>
		<location id="id3" x="-1037" y="-909">
			<label kind="invariant" x="-1020" y="-918">t&lt;=2</label>
		</location>
		<location id="id4" x="-1241" y="-909">
			<label kind="invariant" x="-1309" y="-918">t&lt;=5</label>
		</location>
		<init ref="id4"/>
		<transition>
			<source ref="id3"/>
			<target ref="id4"/>
			<label kind="guard" x="-1223" y="-1020">t&gt;=2</label>
			<label kind="assignment" x="-1223" y="-986">st=2</label>
			<nail x="-1037" y="-986"/>
			<nail x="-1241" y="-986"/>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id4"/>
			<label kind="guard" x="-1224" y="-867">t&lt;=2</label>
			<label kind="synchronisation" x="-1224" y="-850">reply?</label>
			<label kind="assignment" x="-1223" y="-833">st=1</label>
			<nail x="-1037" y="-833"/>
			<nail x="-1241" y="-833"/>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id3"/>
			<label kind="guard" x="-1223" y="-943">t&gt;=3</label>
			<label kind="synchronisation" x="-1223" y="-926">poll!</label>
			<label kind="assignment" x="-1223" y="-909">t=0,st=0</label>
		</transition>
	</template>
	<system>// Place template instantiations here.
sensor = Sensor();
control = Controller();
// List one or more processes to be composed into a system.
system sensor,control;
    </system>
	<queries>
		<query>
			<formula>simulate 1 [&lt;=20] {control.t,control.st}
			</formula>
			<comment>
			</comment>
		</query>
	</queries>
</nta>
